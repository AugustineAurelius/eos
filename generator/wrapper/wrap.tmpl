	var logger *zap.Logger
	{{if .HasContext -}}
	txn := newrelic.FromContext(ctx)
	
	if txn != nil {
		txnCore, err := nrzap.WrapTransactionCore(m.baseLogger.Core(), txn)
		if err == nil {
			logger = zap.New(txnCore).With(zap.String("method", "{{$.Name}}.{{.Name}}"))
		} else {
